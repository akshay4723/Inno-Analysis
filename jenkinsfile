pipeline {
    agent any

    environment {
        Inno-Analysis = "D:/sih/Inno-Analysis" // Define project folder path
        static_analysis = "scan_results.db"           // Define database name
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out the code...'
                git 'https://github.com/akshay4723/Inno-Analysis.git'
            }
        }

        stage('Set Up Environment') {
            steps {
                echo 'Setting up environment...'
                sh '''
                python3 -m venv venv
                source venv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Static Analysis') {
            steps {
                echo 'Running static code analysis...'
                sh '''
                source venv/bin/activate
                python yesmine.py
                '''
            }
        }

        stage('Publish Report') {
            steps {
                echo 'Publishing report to Jenkins...'
                archiveArtifacts artifacts: 'scan_results.db', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed. Check the logs.'
        }
    }
}
